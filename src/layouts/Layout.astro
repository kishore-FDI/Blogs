---
import "../styles/global.css";
import { Image } from "astro:assets";
import favicon from "../favicon.ico";
import whatsapp from "../whatsapp.svg";
import insta from "../insta.svg";
import linkedin from "../linkedin.svg";
import { ClientRouter } from "astro:transitions";
const { title, description = 'A personal blog about web development, technology, and more.', keywords = 'blog, web development, technology, astro', author = 'Kishore Kumar' } = Astro.props;
const site = Astro.site || 'https://yourdomain.com';
const canonicalUrl = site + Astro.url.pathname;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href={favicon} type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    <link rel="canonical" href={canonicalUrl} />
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Blogs" />
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json">{JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'WebSite',
      'url': site,
      'name': title,
      'author': {
        '@type': 'Person',
        'name': author
      },
      'description': description
    })}</script>
    <ClientRouter />
    <style type="text/css">
      body {
        margin: 40px auto;
        margin-top: 0px;
        max-width: 720px;
        line-height: 1.6;
        font-size: 18px;
        /* color: #444; */
        padding: 0 10px;
      }

      h1,
      h2,
      h3 {
        line-height: 1.2;
      }
    </style>
  </head>
  <body>
    <nav class="flex justify-between pt-[40px] mx-4">
      <a class="flex justify-center items-center gap-2" href="/">
        <Image
          src={favicon}
          width="40"
          height="40"
          alt="Logo"
          class="hover:scale-110 transition-all duration-100 ease-in-out"
          loading={"eager"}
        />
        <h1 class="text-3xl font-serif"> Blogs</h1>
      </a>
      <!-- Socials -->
      <div class="flex">
        <a href="https://wa.me/+918124075301" target="_blank">
          <Image
            src={whatsapp}
            width="40"
            height="40"
            alt="Whatsapp"
            class="hover:scale-110 transition-all duration-100 ease-in-out"
            loading={"eager"}
          />
        </a>
        <a href="https://www.instagram.com/kishorekumark22/" target="_blank">
          <Image
            src={insta}
            width="40"
            height="40"
            alt="Instagram"
            class="hover:scale-110 transition-all duration-100 ease-in-out"
            loading={"eager"}
          />
        </a>
        <a href="https://www.linkedin.com/in/kkube/" target="_blank">
          <Image
            src={linkedin}
            width="40"
            height="40"
            alt="Linkedin"
            class="hover:scale-110 transition-all duration-100 ease-in-out"
            loading={"eager"}
          />
        </a>
      </div>
    </nav>
    <article>
      <slot />
    </article>
  </body></html
>
<style is:global>
  @keyframes bump {
    0% {
      opacity: 0;
      transform: scale(1) translateX(200px);
    }
    50% {
      opacity: 0.5;
      transform: scale(1.1);
    }
    100% {
      opacity: 1;
      transform: scale(1) translateX(0);
    }
  }
</style>
